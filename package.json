{
  "name": "noop-sample-app",
  "version": "1.0.0",
  "description": "Root of Noop Sample App",
  "author": "Derek Wolpert",
  "scripts": {
    "lint": "concurrently npm:lint-* --raw --max-processes 1",
    "lint-eslint": "eslint . --ext .js,.vue --fix --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore",
    "lint-prettier": "prettier \"**/*.{htm,html,json,md,markdown,yml,yaml}\" --write --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noop-inc/noop-sample-app-covid-19-mobility.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/noop-inc/noop-sample-app-covid-19-mobility/issues"
  },
  "homepage": "https://github.com/noop-inc/noop-sample-app-covid-19-mobility#readme",
  "devDependencies": {
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-vue": "^8.6.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "standard"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,vue}": [
      "eslint --fix --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore"
    ],
    "**/*.{htm,html,json,md,markdown,yml,yaml}": [
      "prettier --write --ignore-path .gitignore"
    ]
  }
}
