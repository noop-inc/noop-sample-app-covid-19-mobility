{
  "name": "noop-sample-app",
  "version": "1.0.0",
  "description": "Root of Noop Sample App",
  "author": "Derek Wolpert",
  "scripts": {
    "lint": "concurrently npm:lint-* --raw --max-processes 1",
    "lint-eslint": "eslint . --ext .js,.vue --fix --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore",
    "lint-prettier": "prettier . \"!**/*.{js,cjs,mjs,vue}\" --write --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noop-inc/noop-sample-app-covid-19-mobility.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/noop-inc/noop-sample-app-covid-19-mobility/issues"
  },
  "homepage": "https://github.com/noop-inc/noop-sample-app-covid-19-mobility#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-vue": "^8.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "snazzy": "^9.0.0",
    "standard": "^16.0.4"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "mocha": true,
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "standard"
    ],
    "rules": {
      "vue/attribute-hyphenation": "off",
      "vue/require-prop-types": "off",
      "vue/require-default-prop": "off",
      "vue/no-v-html": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,vue}": [
      "eslint --fix --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore --no-error-on-unmatched-pattern"
    ],
    "!**/*.{js,cjs,mjs,vue}": [
      "prettier --write --ignore-path .gitignore --no-error-on-unmatched-pattern"
    ]
  }
}
